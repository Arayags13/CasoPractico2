@model IEnumerable<CasoPractico2.BLL.Dtos.ProductoDto>

@{
    ViewData["Title"] = "Inventario";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>📦 Inventario de Productos</h2>
    <a asp-action="Crear" class="btn btn-primary">Nuevo Producto</a>
</div>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}

<table class="table table-hover table-bordered">
    <thead class="table-light">
        <tr>
            <th>Nombre</th>
            <th>Descripción</th>
            <th>Precio</th>
            <th>Stock</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Nombre</td>
                <td>@item.Descripcion</td>
                <td>@item.Precio.ToString("C")</td>
                <td>
                    <span class="badge @(item.Stock > 0 ? "bg-success" : "bg-danger")">
                        @item.Stock
                    </span>
                </td>
                <td>
                    <a asp-action="Editar" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-action="Detalles" asp-route-id="@item.Id" class="btn btn-info btn-sm">Detalles</a>
                </td>
            </tr>
        }
    </tbody>
</table>
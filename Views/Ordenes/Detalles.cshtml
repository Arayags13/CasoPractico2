@model CasoPractico2.BLL.Dtos.OrdenDto

@{
    ViewData["Title"] = "Detalle de Orden";
}

<h2>Detalle de Orden #@Model.Id</h2>

<div>
    <dl class="row">
        <dt class="col-sm-2">Fecha</dt>
        <dd class="col-sm-10">@Model.Fecha</dd>

        <dt class="col-sm-2">Estado</dt>
        <dd class="col-sm-10">@Model.Estado</dd>

        <dt class="col-sm-2">Total</dt>
        <dd class="col-sm-10">@Model.Total.ToString("C")</dd>
    </dl>
</div>

<h4>Productos Comprados</h4>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID Producto</th>
            <th>Cantidad</th>
            <th>Precio Unitario</th>
            <th>Total Línea</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Detalles != null && Model.Detalles.Any())
        {
            foreach (var item in Model.Detalles)
            {
                <tr>
                    <td>@item.ProductoId</td>
                    <td>@item.Cantidad</td>
                    <td>@(item.PrecioUnitario.HasValue? item.PrecioUnitario.Value.ToString("C") : "N/A")</td>
                    <td>@(item.TotalLinea.HasValue? item.TotalLinea.Value.ToString("C") : "N/A")</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4" class="text-center">No hay detalles disponibles</td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="Index" class="btn btn-secondary">Volver al Listado</a>
</div>